      // conditional statements
      function revise() {
        var first = parseInt(prompt("Enter the first number: "));
        var second = parseInt(prompt("Enter the second number: "));
        if (first > second) {
          console.log("You are a pro programmer.");
        } else {
          console.log(
            "You are not a good programmer but can be better with time."
          );
        }
      }
      revise();
