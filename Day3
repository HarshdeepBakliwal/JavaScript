<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <script>
      let x = 28;
      let y = 32;
      // Arithematic Operators
      console.log("x + y = ", x + y);
      console.log("x - y = ", x - y);
      console.log("x / y = ", x / y);
      console.log("x * y = ", x * y);
      console.log("x % y = ", x % y);
      console.log("++y = ", ++y);
      console.log("y++ = ", y++);
      console.log("--y = ", --y);
      console.log("y-- = ", y--);
      console.log("y = ", y);
      console.log("y-- = ", y--);

      // Assignment Operators
      let assignment = 4;
      assignment += 9; // same as assignment = assignment + 9
      console.log("y is now = ", y);
      assignment -= 9; // same as assignment = assignment - 9
      console.log("y is now = ", y);
      assignment = 5; // same as assignment = assignment 5
      console.log("y is now = ", y);
      assignment /= 5; // same as assignment = assignment / 5
      console.log("y is now = ", y);

      // Comparison Operators
      let comp1 = 16;
      let comp2 = 11;
      console.log("comp1 == comp2 is ", comp1 == comp2);
      console.log("comp1 != comp2 is ", comp1 != comp2);
      console.log("comp1 === comp2 is ", comp1 === comp2);
      console.log("comp1 !== comp2 is ", comp1 !== comp2);
      console.log("comp1 > comp2 is ", comp1 > comp2);

      // Logical Operators
      let a = 28;
      let b =23;
      console.log(a < b && a == 28);
      console.log(a > b || a == 28);
      console.log(!false);
      console.log(!true);
    </script>
  </body>
</html>
